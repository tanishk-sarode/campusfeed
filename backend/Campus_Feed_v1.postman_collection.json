{
  "info": {
    "name": "Campus Feed API v1",
    "description": "Free-only campus feed backend with domain-restricted auth, posts, comments, reactions, and media uploads.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "verify_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "post_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "comment_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"student@nitrkl.ac.in\",\n  \"password\": \"SecurePass123\",\n  \"name\": \"Test Student\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/signup",
              "host": ["{{base_url}}"],
              "path": ["auth", "signup"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const json = pm.response.json();",
                  "    if (json.token_debug) {",
                  "        pm.collectionVariables.set('verify_token', json.token_debug);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Verify Email",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/verify?token={{verify_token}}",
              "host": ["{{base_url}}"],
              "path": ["auth", "verify"],
              "query": [
                {
                  "key": "token",
                  "value": "{{verify_token}}"
                }
              ]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"student@nitrkl.ac.in\",\n  \"password\": \"SecurePass123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Posts",
      "item": [
        {
          "name": "List Posts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/posts?category=Events",
              "host": ["{{base_url}}"],
              "path": ["posts"],
              "query": [
                {
                  "key": "category",
                  "value": "Events",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Create Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Club Meeting Tomorrow\",\n  \"content_md\": \"## Agenda\\n\\n- Project updates\\n- Q&A session\\n\\n**Time:** 5 PM\",\n  \"category\": \"Events\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/posts",
              "host": ["{{base_url}}"],
              "path": ["posts"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const json = pm.response.json();",
                  "    pm.collectionVariables.set('post_id', json.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get Post",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/posts/{{post_id}}",
              "host": ["{{base_url}}"],
              "path": ["posts", "{{post_id}}"]
            }
          }
        },
        {
          "name": "Edit Post",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated: Club Meeting Tomorrow\",\n  \"content_md\": \"## Updated Agenda\\n\\n- New topic added\\n- Project updates\\n- Q&A session\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/posts/{{post_id}}",
              "host": ["{{base_url}}"],
              "path": ["posts", "{{post_id}}"]
            }
          }
        },
        {
          "name": "Delete Post",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/posts/{{post_id}}",
              "host": ["{{base_url}}"],
              "path": ["posts", "{{post_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Comments",
      "item": [
        {
          "name": "List Comments",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/comments/post/{{post_id}}",
              "host": ["{{base_url}}"],
              "path": ["comments", "post", "{{post_id}}"]
            }
          }
        },
        {
          "name": "Add Comment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Great event! Looking forward to it.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/comments/post/{{post_id}}",
              "host": ["{{base_url}}"],
              "path": ["comments", "post", "{{post_id}}"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const json = pm.response.json();",
                  "    pm.collectionVariables.set('comment_id', json.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Reply to Comment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Me too! Will bring snacks.\",\n  \"parent_id\": {{comment_id}}\n}"
            },
            "url": {
              "raw": "{{base_url}}/comments/post/{{post_id}}",
              "host": ["{{base_url}}"],
              "path": ["comments", "post", "{{post_id}}"]
            }
          }
        },
        {
          "name": "Edit Comment",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Updated: Great event! Count me in.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/comments/{{comment_id}}",
              "host": ["{{base_url}}"],
              "path": ["comments", "{{comment_id}}"]
            }
          }
        },
        {
          "name": "Delete Comment",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/comments/{{comment_id}}",
              "host": ["{{base_url}}"],
              "path": ["comments", "{{comment_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Reactions",
      "item": [
        {
          "name": "Add Reaction to Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"post_id\": {{post_id}},\n  \"type\": \"like\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/reactions",
              "host": ["{{base_url}}"],
              "path": ["reactions"]
            }
          }
        },
        {
          "name": "Add Reaction to Comment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"comment_id\": {{comment_id}},\n  \"type\": \"like\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/reactions",
              "host": ["{{base_url}}"],
              "path": ["reactions"]
            }
          }
        },
        {
          "name": "Remove Reaction from Post",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"post_id\": {{post_id}},\n  \"type\": \"like\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/reactions",
              "host": ["{{base_url}}"],
              "path": ["reactions"]
            }
          }
        }
      ]
    },
    {
      "name": "Media",
      "item": [
        {
          "name": "Upload Media",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "post_id",
                  "value": "{{post_id}}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/media/upload",
              "host": ["{{base_url}}"],
              "path": ["media", "upload"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/healthz",
          "host": ["{{base_url}}"],
          "path": ["healthz"]
        }
      }
    }
  ]
}
